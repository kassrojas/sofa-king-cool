<div class="room-card card m-5 p-3">
    <div class="row m-1 p-3 justify-content-center">
        <h2 class="card-header my-2">{{rooms.name}}</h2>
        <button class="renameRoomBtn btn btn-outline-dark col-6 col-lg-4">Rename Room &#9998;</button>
        <form class="input-group col-6 col-lg-4" id="renameRoomForm">
            <input type="text" class="user-input form-control" id="roomRenameInput" placeholder="Rename Room">
            <button class="rename-btn btn btn-outline-dark" data-index-number="{{rooms.id}}" type="submit"
                id="submitRename">Rename</button>
        </form>
    </div>
    <div>
        <div>
            <h4 class="text-center"> In Your Room: </h4>
            <ul class="row row-cols-xs-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 justify-content-center">
                {{#each rooms.furniture as |furniture|}}
                {{>room-furniture-details}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row justify-content-center">
        <button type="button" data-index-number="{{rooms.id}}" class="delete-btn btn btn-outline-danger col-6 col-lg-4"> Delete Room &#128465;</button>
    </div>
</div>
{{results}}

<script src="/js/room-details.js"></script>